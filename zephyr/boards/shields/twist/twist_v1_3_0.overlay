/ {
	choosen{
		zephyr,can-primary = &fdcan1;
	};
	
	power_shield: power-shield{
        compatible = "power-leg";
        default-frequency = <200000>;
        leg1: leg1{
            leg-name = "LEG1";
            pwm-pin-num = <12 14>;
			pwm-x1-high = <1>;
            capa-pin-num = <7>;
            driver-pin-num = <19>;
            current-pin-num = <30>;
            default-adc-trigger = "ADCTRIG_1";
            default-adc-decim = <1>;
            default-edge-trigger = "EdgeTrigger_up";
            default-dead-time = <100 100>;
            default-modulation = "UpDwn";
            default-phase-shift = <0>;
			status = "okay";
        };

        leg2: leg2{
            leg-name = "LEG2";
            pwm-pin-num = <2 4>;
			pwm-x1-high = <1>;
            capa-pin-num = <56>;
            driver-pin-num = <22>;
            current-pin-num = <25>;
            default-adc-trigger = "ADCTRIG_3";
            default-adc-decim = <1>;
            default-edge-trigger = "EdgeTrigger_up";
            default-dead-time = <100 100>;
            default-modulation = "UpDwn";
            default-phase-shift = <0>;
			status = "okay";
        };
    };

	shield-channels {
		/* Voltage channels */
		v1low: v1-low {
			compatible = "adc-channels";
			channel-name = "V1_LOW";
			default-gain = <0x3d3851ec>;
			default-offset = <0xc2b867f0>;
			spin-pin = <29>;
			v1-low-adc1 {
				io-channels = <&adc1 1>;
			};
			v1-low-adc2 {
				io-channels = <&adc2 1>;
			};
			status = "okay";
		};

		v2low: v2-low {
			compatible = "adc-channels";
			channel-name = "V2_LOW";
			default-gain = <0x3d3851ec>;
			default-offset = <0xc2b867f0>;
			spin-pin = <24>;
			v2-low-adc1 {
				io-channels = <&adc1 6>;
			};
			v2-low-adc2 {
				io-channels = <&adc2 6>;
			};
			status = "okay";
		};

		vhigh: v-high {
			compatible = "adc-channels";
			channel-name = "V_HIGH";
			default-gain = <0x3cf57710>;
			default-offset = <0x00000000>;
			spin-pin = <27>;
			v-high-adc1 {
				io-channels = <&adc1 9>;
			};
			v-high-adc2 {
				io-channels = <&adc2 9>;
			};
			status = "okay";
		};

		/* Current channels */

		i1low: i1-low {
			compatible = "adc-channels";
			channel-name = "I1_LOW";
			default-gain = <0x3ba3d70a>;
			default-offset = <0xc1200000>;
			spin-pin = <30>;
			i1-low-adc1 {
				io-channels = <&adc1 2>;
			};
			i1-low-adc2 {
				io-channels = <&adc2 2>;
			};
			status = "okay";
		};

		i2low: i2-low {
			compatible = "adc-channels";
			channel-name = "I2_LOW";
			default-gain = <0x3ba3d70a>;
			default-offset = <0xc1200000>;
			spin-pin = <25>;
			i2-low-adc1 {
				io-channels = <&adc1 7>;
			};
			i2-low-adc2 {
				io-channels = <&adc2 7>;
			};
			status = "okay";
		};

		ihigh: i-high {
			compatible = "adc-channels";
			channel-name = "I_HIGH";
			default-gain = <0x3ba3d70a>;
			default-offset = <0xc1200000>;
			spin-pin = <26>;
			i-high-adc1 {
				io-channels = <&adc1 8>;
			};
			i-high-adc2 {
				io-channels = <&adc2 8>;
			};
			status = "okay";
		};

		/* Other channels */

		temp: temp-sensor {
			compatible = "adc-channels";
			channel-name = "TEMP_SENSOR";
			default-gain = <0x3f800000>;
			default-offset = <0x00000000>;
			spin-pin = <31>;
			temp-sensor-adc3 {
				io-channels = <&adc3 12>;
			};
			status = "disabled";
		};

		extra: extra-sensor {
			compatible = "adc-channels";
			channel-name = "EXTRA_MEAS";
			default-gain = <0x3f800000>;
			default-offset = <0x00000000>;
			spin-pin = <6>;
			analog-comm-adc4 {
				io-channels = <&adc4 5>;
			};
			status = "disabled";
		};

		analog: analog-comm {
			compatible = "adc-channels";
			channel-name = "ANALOG_COMM";
			default-gain = <0x3f800000>;
			default-offset = <0x00000000>;
			spin-pin = <35>;
			extra-sensor-adc2 {
				io-channels = <&adc2 5>;
			};
			status = "okay";
		};
	};

	shield-safety-thresholds {

		/* Voltage thresholds */

		v1lowtd: v1-low-td {
			compatible = "safety-thresholds";
			channel-name = "V1_LOW";
			threshold-name = "V1_LOW_TD";
			threshold-high = <0x428c0000>; /* 70.0 */
			threshold-low = <0xc1200000>; /* -10.0 */
			status = "okay";
		};

		v2lowtd: v2-low-td {
			compatible = "safety-thresholds";
			channel-name = "V2_LOW";
			threshold-name = "V2_LOW_TD";
			threshold-high = <0x428c0000>; /* 70.0 */
			threshold-low = <0xc1200000>; /* -10.0 */
			status = "okay";
		};

		vhightd: v-high-td {
			compatible = "safety-thresholds";
			channel-name = "V_HIGH";
			threshold-name = "V_HIGH_TD";
			threshold-high = <0x42c80000>; /* 100.0 */
			threshold-low = <0x41200000>; /* 10.0 */
			status = "okay";
		};

		/* Current thresholds */

		i1lowtd: i1-low-td {
			compatible = "safety-thresholds";
			channel-name = "I1_LOW";
			threshold-name = "I1_LOW_TD";
			threshold-high = <0x40e00000>; /* 7.0 */
			threshold-low = <0xc0e00000>; /* -7.0 */
			status = "okay";
		};

		i2lowtd: i2-low-td {
			compatible = "safety-thresholds";
			channel-name = "I2_LOW";
			threshold-name = "I2_LOW_TD";
			threshold-high = <0x40e00000>; /* 7.0 */
			threshold-low = <0xc0e00000>; /* -7.0 */
			status = "okay";
		};

		ihightd: i-high-td {
			compatible = "safety-thresholds";
			channel-name = "I_HIGH";
			threshold-name = "I_HIGH_TD";
			threshold-high = <0x40e00000>; /* 7.0 */
			threshold-low = <0xc0e00000>; /* -7.0 */
			status = "okay";
		};

		/* Other channels thresholds */

		temptd: temp-sensor-td {
			compatible = "safety-thresholds";
			channel-name = "TEMP_SENSOR";
			threshold-name = "TEMP_SENSOR_TD";
			threshold-high = <0x00000000>;
			threshold-low = <0x00000000>;
			status = "disabled";
		};

		extratd: extra-sensor-td {
			compatible = "safety-thresholds";
			channel-name = "EXTRA_MEAS";
			threshold-name = "EXTRA_MEAS_TD";
			threshold-high = <0x00000000>;
			threshold-low = <0x00000000>;
			status = "disabled";
		};

		analogtd: analog-comm-td {
			compatible = "safety-thresholds";
			channel-name = "ANALOG_COMM";
			threshold-name = "ANALOG_COMM_TD";
			threshold-high = <0x00000000>;
			threshold-low = <0x00000000>;
			status = "disabled";
		};
	};
	
	ngnd: ngnd-switch {
		compatible = "gpio-device";
		ngnd-gpio-pin {
			gpios = <&gpiob 11 GPIO_ACTIVE_HIGH>;
		};
	};
};

// UART / RS485 transceiver

&usart3 {
	pinctrl-0 = < &usart3_tx_pc10 &usart3_rx_pc11 >;
	pinctrl-names = "default";
	current-speed = <10625000>;
	status = "okay";
};

// CAN

&fdcan1 {
	pinctrl-0 = <&fdcan1_rx_pb8 &fdcan1_tx_pb9>;
	pinctrl-names = "default";
	bus-speed = <500000>;
	sample-point = <875>;
	bus-speed-data = <500000>;
	sample-point-data = <875>;
	status = "okay";
	transceiver0: can-phy0 {
		compatible = "ti,tcan334", "can-transceiver-gpio";
		max-bitrate = <1000000>;
		standby-gpios = <&gpiob 10 GPIO_ACTIVE_HIGH>;
		#phy-cells = <0>;
	};
};

&pwma {
	status = "okay";
};

&pwmc {
	status = "okay";
};

&pwmd {
	status = "disabled";
};

&pwme {
	status = "disabled";
};

&pwmf {
	status = "disabled";
};

&hrtim1 {
	scin: scin {
		pinctrl-0 = <&hrtim1_scin_pb6>;
	};
	scout: scout {
		pinctrl-0 = <&hrtim1_scout_pb1>;
	};
};
